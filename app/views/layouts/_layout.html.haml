%span#top_links
  - if user_signed_in?
    %span#user_message
      hello
      = current_user.email
    %span#user_links
      = link_to 'account', edit_user_registration_path
      |
      = link_to 'log out', destroy_user_session_path, :method => 'DELETE'
  - elsif request.path != user_session_path
    %span#user_links
      = link_to 'log in', new_user_session_path
