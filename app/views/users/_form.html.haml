= semantic_form_for @user do |f|
  = f.inputs do
    = f.input :email
    = f.input :password
    = f.input :password_confirmation
    = f.input :role, :as => :select, :include_blank => false, :collection => ['extern', 'pls', 'admin']
  = f.actions do
    = f.action :submit, :as => :button
    = f.action :cancel, :as => :link, :label => 'Cancel'



