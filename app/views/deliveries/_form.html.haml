= semantic_form_for @delivery do |f|
  = f.inputs do
    = f.input :product, :member_label => :item_code
    = f.input :purchase_order
    = f.input :order_quantity
    = f.input :actual_quantity
    = f.input :shipped_at,:as => :date, :order => [:day, :month, :year], :start_year => 2011
    = f.input :delivered_at,:as => :date, :order => [:day, :month, :year], :start_year => 2011
  = f.actions do
    = f.action :submit, :as => :button
    = f.action :cancel, :as => :link, :label => 'Cancel'


