%h2 Log in

.spacer40
.span7.offset1
  = twitter_bootstrap_form_for @user, :url => user_session_path, :html => {:class => 'form-horizontal'} do |f|
    = f.inputs do
      = f.text_field :email
      = f.password_field :password
      - if devise_mapping.rememberable?
        = f.toggles do
          = f.check_box :remember_me, 'Remember me', :checked => true
    = f.actions do
      = f.submit 'Log in', :class => 'btn btn-danger'
  = render 'links'


