%h2 Sign in
= semantic_form_for @user, :url => user_session_path do |f|
  = f.inputs do
    = f.input :email
    = f.input :password
    - if devise_mapping.rememberable?
      = f.input :remember_me, :label => ' Remember me', :as => :boolean, :input_html => {:checked => true}
  = f.actions do
    = f.action :submit, :label => "Sign in"
= render "links"

