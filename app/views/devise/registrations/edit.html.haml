%h2 Edit your account

.spacer40
.span7.offset1
  = twitter_bootstrap_form_for @user, :url => user_registration_path, :html => {:class => 'form-horizontal'} do |f|
    = f.inputs do
      = f.text_field :email
      = f.password_field :password, "New password"
      = f.password_field :password_confirmation, "Confirm password"
      = f.password_field :current_password, "Current password"
    = f.actions do
      = f.submit 'Submit', :class => 'btn btn-danger'
      = button_tag 'Cancel', :type => 'reset' , :class => 'btn'

